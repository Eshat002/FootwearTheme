<footer class="footer">
  <div class="footer-wrapper">
    {% for block in section.blocks %}
      <div class="footer-block" {{ block.shopify_attributes }}>
        {% case block.type %}
          {% when 'text' %}
            <h3>{{ block.settings.heading }}</h3>
            {% if block.settings.text != blank %}
              <p>{{ block.settings.text }}</p>
            {% endif %}

          {% when 'menu' %}
            <h3>{{ block.settings.heading }}</h3>
            {% if block.settings.menu != blank %}
              <ul>
                {% for link in block.settings.menu.links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}

          {% when 'social' %}
            <h3>{{ block.settings.heading }}</h3>
            <div class="social-links">
              {% if block.settings.facebook != blank %}
                <a href="{{ block.settings.facebook }}">Facebook</a>
              {% endif %}
              {% if block.settings.instagram != blank %}
                <a href="{{ block.settings.instagram }}">Instagram</a>
              {% endif %}
              {% if block.settings.twitter != blank %}
                <a href="{{ block.settings.twitter }}">Twitter</a>
              {% endif %}
            </div>
        {% endcase %}
      </div>
    {% endfor %}
  </div>

  <div class="footer-bottom">
    Â© {{ 'now' | date: '%Y' }}
    {{ shop.name }}. <span class="copyright-text">{{ section.settings.copyright_text }} </span>
  </div>
</footer>

<style>
  .footer {
    background: {{section.settings.bg_color}};
    color: {{section.settings.text_color}};
    padding: 50px 20px;
  }

  .footer-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
    justify-content: space-between;
  }

  .footer-block {
    flex: 1 1 200px;
  }

  .footer-block h3 {
    margin-bottom: 15px;
    font-size: 18px;
  }

  .footer-block ul {
    list-style: none;
    padding: 0;
  }

  .footer-block ul li {
    margin-bottom: 8px;
  }

  .footer-block a {
    color: {{section.settings.link_color}};
    text-decoration: none;
  }

  .footer-block a:hover {
    color: #fff;
  }

  .footer-bottom {
    text-align: center;
    margin-top: 40px;
    font-size: 14px;
    opacity: 0.7;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "max_blocks": 6,
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },

    {
      "type": "color",
      "id": "link_color",
      "label": "Link Color",
      "default": "#000000"
    },

    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "All right reserverd"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Site Name"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Write something about your store."
        }
      ]
    },
    {
      "type": "menu",
      "name": "Menu Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Select Menu"
        }
      ]
    },
    {
      "type": "social",
      "name": "Social Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Follow Us"
        },
        {
          "type": "url",
          "id": "facebook",
          "label": "Facebook URL"
        },
        {
          "type": "url",
          "id": "instagram",
          "label": "Instagram URL"
        },
        {
          "type": "url",
          "id": "twitter",
          "label": "Twitter URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}
