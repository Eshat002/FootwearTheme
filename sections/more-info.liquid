<section class="more-info">
  <div class="more-info-wrapper">
    <h1>{{ section.settings.text }}</h1>
    <p>{{ section.settings.text2 }}</p>
    <button>Shop</button>
  </div>
</section>

<style>
    .more-info{
    background-color: {{section.settings.background}};
    color: {{section.settings.more_info_text_color}};
    display: flex;
    justify-content: center;

    }

  .more-info-wrapper{
    display: flex;
    flex-direction: column;
    width: 500px;
    justify-content: center;
    align-items: center;
  }

  .more-info-wrapper h1 {
    font-size: 50px;
  }

  .more-info-wrapper button {
    background-color: gray;
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    cursor: pointer;
  }
</style>

{% schema %}
{
  "name": "More Info",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "more_info_text_color",
      "label": "Text",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Section heading"
    },

    {
      "type": "text",
      "id": "text2",
      "label": "Text2",
      "default": "section text"
    }
  ]
}
{% endschema %}
