<section>
  <div class="banner-wrapper">banner</div>
</section>

<style>
  .banner-wrapper{
    background-color: {{section.settings.background}};
    color: {{section.settings.text_color}}
  }
</style>

{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#000000"
    }
  ],
  "presets": [{ "name": "Banner" }]
}
{% endschema %}
