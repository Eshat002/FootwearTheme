<section>
  <div class="three-images-wrapper">
    {% if section.settings.image != blank %}
      <div class="one-user">
        <h1></h1>
      </div>
    {% else %}
      <div class="one">
        <h2></h2>
      </div>
    {% endif %}
    {% if section.settings.image != blank %}
      <div class="two-user">
        <h1></h1>
      </div>
    {% else %}
      <div class="two">
        <h2></h2>
      </div>
    {% endif %}

    {% if section.settings.image != blank %}
      <div class="three-user">
        <h1></h1>
      </div>
    {% else %}
      <div class="three">
        <h2></h2>
      </div>
    {% endif %}
  </div>
</section>

<style>
    .three-images-wrapper{
        display: flex;
    }
  .one {
    background-image: url("{{'default.jpg'| asset_url}}");
    width: 33.33%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }

  .one-user {
    background-image: url('{{section.settings.image |  image_url }}');
    width: 33.33%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }


    .two{
    background-image: url("{{'default.jpg'| asset_url}}");
    width: 33.33%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }

  .two-user {
    background-image: url('{{section.settings.image2 |  image_url }}');
    width: 33.33%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }


    .three {
    background-image: url("{{'default.jpg'| asset_url}}");
    width: 33.33%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }

  .three-user {
    background-image: url('{{section.settings.image3 |  image_url }}');
    width: 33.33%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }
</style>

